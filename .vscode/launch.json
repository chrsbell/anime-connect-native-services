{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/src/auth",
      "name": "Debug Serverless Auth",
      "preLaunchTask": "tsc: buildAuth",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect"],
      "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
      "args": ["offline", "start"],
      "outFiles": ["${workspaceFolder}/src/auth/.build/**/*.js"],
      "port": 9229,
      "console": "integratedTerminal",
      "sourceMaps": true
    }
  ]
}
